// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String 
  createdAt DateTime @default(now())
  isOnline  Boolean
  bill  Bill[]
  profile    Profile?
}

model Profile {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  firstName String
  lastName  String
  state      String
  city    String
  county  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bill {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  amount    Float
  dueDate   DateTime
  status    String   @default("unpaid")
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
